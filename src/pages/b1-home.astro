      <button type="button" class="p-2 hover:text-blue-400" id="prevM">←</button>
      <span>${monthNames[m]} ${y}</span>
      <button type="button" class="p-2 hover:text-blue-400" id="nextM">→</button>
    </div>
    <div class="grid grid-cols-7 gap-1 text-[9px] text-center text-white/40 mb-4 font-bold uppercase">
      <div>S</div><div>M</div><div>T</div><div>W</div><div>T</div><div>F</div><div>S</div>
    </div>
    <div class="grid grid-cols-7 gap-y-3">`;

    for (let i = 0; i < firstDay; i++) html += '<div></div>';

    for (let d = 1; d <= daysInMonth; d++) {
      cconst yearSuffix = String(y).slice(-2);
      const dateId = `${yearSuffix}${('0'+(m+1)).slice(-2)}${('0'+d).slice(-2)}`;
      const hasData = availableDates.includes(dateId);
      const activeStyle = hasData ? "bg-blue-600 text-white font-black cursor-pointer shadow-lg scale-110" : "text-white/10 pointer-events-none";
      html += `<div class="aspect-square flex items-center justify-center rounded-full text-[12px] transition-all ${activeStyle}" data-date="${dateId}">${d}</div>`;
    }
    calendarEl.innerHTML = html + '</div>';

    document.getElementById('prevM').onclick = () => { curM--; if(curM<0){curM=11;curY--} renderCalendar(curY, curM); };
    document.getElementById('nextM').onclick = () => { curM++; if(curM>11){curM=0;curY++} renderCalendar(curY, curM); };
    
    calendarEl.querySelectorAll('[data-date]').forEach(el => {
      el.onclick = () => {
        const targetDate = el.getAttribute('data-date');
        const group = reportGroups.find(g => g.id === targetDate);
        const rankingData = allRankings[targetDate]; // ★追加：クリックした日のランキングデータを取得

        if (group) {
          // 形式を 2026.02.08 に整える
          const displayStr = `20${targetDate.substring(0, 2)}.${targetDate.substring(2, 4)}.${targetDate.substring(4, 6)}`;

          // 1. 日付表示をすべて更新
          document.querySelectorAll('.date-display, .rank-date-display').forEach(d => {
            d.innerText = displayStr;
          });

          // 2. ゲーム数を更新
          const gameCountEl = document.querySelector('.text-7xl.font-black.italic');
          if (gameCountEl) gameCountEl.innerText = group.reports.length;

          // 3. レポートスライダーの更新
          const slider = document.getElementById('report-slider');
          if (slider) {
            slider.innerHTML = group.reports.map(r => `
              <div class="flex-none w-[300px] snap-center">
                <div class="rounded-2xl overflow-hidden shadow-2xl border border-white/10 bg-black/40 aspect-[3/4.2]">
                  <img src="${r.path}" class="w-full h-full object-cover" />
                </div>
                <div class="mt-6 px-1">
                  <a href="${r.link}" class="relative group/btn block w-full bg-gradient-to-br from-white/15 to-white/5 border border-white/10 hover:border-white/30 py-3.5 rounded-full transition-all active:scale-95 shadow-xl overflow-hidden">
                    <div class="flex items-center justify-between px-6">
                      <span class="text-[11px] font-black tracking-[0.2em] uppercase text-white/90">
                        ${r.away} <span class="text-[9px] font-medium lowercase tracking-normal mx-1 text-white/40 italic">vs</span> ${r.home}
                      </span>
                      <span class="flex-shrink-0 text-[10px] text-blue-400 group-hover/btn:translate-x-1 transition-transform duration-300 ease-out">▶︎</span>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover/btn:animate-[shimmer_1.5s_infinite] pointer-events-none"></div>
                  </a>
                </div>
              </div>
            `).join('');
            slider.scrollTo({ left: 0, behavior: 'smooth' });
          }

          // 4. ★追加：ランキングセクション（PTS, REB, AST）の更新
          if (rankingData) {
            ['PTS', 'REB', 'AST'].forEach(statType => {
              const pane = document.getElementById(`rank-${statType}`);
              if (!pane) return;

              const statKey = statType.toLowerCase();
              const sortedData = (rankingData[statKey] || []).sort((a, b) => {
                if (b[statKey] !== a[statKey]) return b[statKey] - a[statKey];
                return (a.min || "").localeCompare(b.min || "");
              }).slice(0, 10);

              pane.innerHTML = sortedData.map((player, i) => {
  // 1. デフォルトは「画像なし」
  let cardUrl = "/no-player.png";

  // 2. 試合IDを取得 (player.cardPath か player.card どちらからでも取れるように)
  const sourcePath = player.cardPath || player.card || "";
  const gameMatch = sourcePath.match(/game_(\d+)_/);
  const gameId = gameMatch ? gameMatch[1] : null;

  if (gameId && allPlayerCards.length > 0) {
    // 3. 検索用の名前を正規化（英語・日本語両方用意）
    const targetEn = player.name ? player.name.trim().toUpperCase().replace(/\s+/g, '_').replace(/'/g, '') : "";
    const targetJp = player.nameJp ? player.nameJp.trim() : "";

    // 4. GitHubの全ファイルの中からマッチするものを探す
    const realFile = allPlayerCards.find(item => {
      const upPath = item.path.toUpperCase();
      const hasGameId = upPath.includes(`GAME_${gameId}_`);
      // 英語名か日本語名、どちらかが含まれていればOK
      const hasName = (targetEn && upPath.includes(targetEn)) || (targetJp && upPath.includes(targetJp.toUpperCase()));
      return hasGameId && hasName;
    });

    if (realFile) {
      cardUrl = `https://raw.githubusercontent.com/BDATALAB55/BDL-game-player-cards/main/${encodeURI(realFile.path)}`;
    }
  }

  // 5. HTMLを生成（スタイルはあなたの元のコードを維持）
  return `
    <div class="flex-none w-[300px] md:w-[210px] snap-center">
      <div class="relative group">
        <div class="absolute -top-11 left-1 z-10 flex items-baseline">
          <span class="text-4xl font-black italic text-white leading-none">${i + 1}</span>
          <span class="text-[10px] font-bold uppercase ml-0.5 text-white/70">${['st', 'nd', 'rd'][i] || 'th'}</span>
        </div>
        <div class="relative aspect-[3/4.2] rounded-2xl overflow-hidden shadow-2xl border border-white/10 bg-black/40">
          <img src="${cardUrl}" alt="${player.nameJp || ''}" class="w-full h-full object-cover" loading="lazy" onerror="this.src='/no-player.png'" />
        </div>
        <div class="mt-4 px-1">
          <a href="/b-players?name=${encodeURIComponent(player.name || '')}" class="relative group/btn block w-full bg-white/10 border border-white/10 py-3.5 rounded-full hover:bg-white/20 transition-all">
            <div class="flex items-center justify-between px-6">
              <span class="text-[10px] font-black uppercase tracking-[0.2em] text-white/90 truncate pr-2">${player.name || ''}</span>
              <span class="text-[10px] text-blue-400">▶︎</span>
            </div>
          </a>
        </div>
      </div>
    </div>
  `;
}).join('');
            });
          }
        }
      };
      });
      }
      

  // --- 修正後のスクリプト末尾 ---
const latestId = availableDates.length > 0 ? availableDates[0] : "260208";
curY = parseInt("20" + latestId.substring(0, 2));
curM = parseInt(latestId.substring(2, 4)) - 1; 

renderCalendar(curY, curM);

// カレンダーが描画された後に、最新の日付をシミュレートクリック
setTimeout(() => {
  const initialEl = document.querySelector(`[data-date="${latestId}"]`);
  if (initialEl) {
    initialEl.click();
  } else {
    // 万が一カレンダーにその日がなくても、スライダーだけは動かす
    const group = reportGroups.find(g => g.id === latestId);
    if(group) updateSlider(group, latestId); 
  }
}, 100);
</script>

