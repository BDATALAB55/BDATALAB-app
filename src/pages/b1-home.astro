<script>
  // 既存のカルーセル・タブスクリプトを活かしつつ、ランキング切り替えを追加
  const initTabs = (btnClassName) => {
    const btns = document.querySelectorAll(`.${btnClassName}`);
    btns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tabGroup = btn.getAttribute('data-tab');
        const target = btn.getAttribute('data-target');

        // ボタン表示の切り替え
        document.querySelectorAll(`[data-tab="${tabGroup}"]`).forEach(b => {
          b.classList.remove('bg-white', 'text-black');
          b.classList.add('bg-black/20', 'text-white/80');
        });
        btn.classList.add('bg-white', 'text-black');
        btn.classList.remove('bg-black/20', 'text-white/80');

        // ランキング部門の表示切り替え（rank-btnの場合のみ）
        if (tabGroup === 'rank') {
          document.querySelectorAll('.rank-pane').forEach(pane => pane.classList.add('hidden'));
          document.getElementById(`rank-${target}`)?.classList.remove('hidden');
        }
      });
    });
  };
  initTabs('tab-btn');
  initTabs('rank-btn');

  // チームカルーセルの制御（ドットの動き）
  const teamCarousel = document.getElementById('team-carousel');
  const teamDots = document.querySelectorAll('[data-dot]');
  
  if (teamCarousel) {
    teamCarousel.addEventListener('scroll', () => {
      // 横幅を元に、今何枚目のスライドか計算する
      const index = Math.round(teamCarousel.scrollLeft / teamCarousel.offsetWidth);
      teamDots.forEach((dot, i) => {
        dot.classList.toggle('w-6', i === index);
        dot.classList.toggle('bg-white', i === index);
        dot.classList.toggle('w-2', i !== index);
        dot.classList.toggle('bg-white/10', i !== index);
      });
    });
  }
</script>

