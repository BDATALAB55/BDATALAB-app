export const prerender = false;
import Layout from '../layouts/Layout.astro';

// --- 設定値 ---
const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const DISPLAY_DATE = "20260208";
let displayToday = "2026.02.08"; 
const token = import.meta.env.GITHUB_TOKEN || process.env.GITHUB_TOKEN;

// --- ここから上書き ---
// 1. フォルダ内の全ランキングJSONを動的に一括インポート
const rankingFiles = import.meta.glob('../data/rankings/B1/*.json', { eager: true });

// 2. 日付 (例: 260208) をキーにしたオブジェクトに整理
const allRankings = {};
Object.entries(rankingFiles).forEach(([path, content]) => {
  const dateKey = path.split('/').pop().replace('.json', '').substring(2); 
  allRankings[dateKey] = content.default || content;
});

// 3. 初期表示用のデータ（一番新しい日付、または2月8日）を特定
const latestDateKey = Object.keys(allRankings).sort().reverse()[0] || "260208";
const initialData = allRankings[latestDateKey] || { pts: [], reb: [], ast: [] };

// 4. ソートロジック（そのまま活用）
const sortRank = (a, b, statKey) => {
  if (b[statKey] !== a[statKey]) return b[statKey] - a[statKey];
  return (a.min || "").localeCompare(b.min || "");
};

// 5. 初回読み込み時のランキング（画面に最初に出る分）
const ptsRank10 = (initialData.pts || []).sort((a, b) => sortRank(a, b, 'pts')).slice(0, 10);
const rebRank10 = (initialData.reb || []).sort((a, b) => sortRank(a, b, 'reb')).slice(0, 10);
const astRank10 = (initialData.ast || []).sort((a, b) => sortRank(a, b, 'ast')).slice(0, 10);
// --- ここまで上書き ---

const cityNameMap = {
  "HOKKAIDO": "HOKKAIDO", "LEVANGA": "HOKKAIDO", "LEVANGAHOKKAIDO": "HOKKAIDO",
  "89ERS": "SENDAI", "SENDAI": "SENDAI", "SENDAI89ERS": "SENDAI",
  "AKITA": "AKITA", "NORTHERNHAPPINETS": "AKITA",
  "ROBOTS": "IBARAKI", "IBARAKI": "IBARAKI",
  "BREX": "UTSUNOMIYA", "UTSUNOMIYA": "UTSUNOMIYA",
  "CRANETHUNDERS": "GUNMA", "GUNMA": "GUNMA",
  "ALPHAS": "KOSHIGAYA", "KOSHIGAYA": "KOSHIGAYA",
  "ALTIRI": "A-CHIBA", "ACHIBA": "A-CHIBA",
  "JETS": "CHIBA-J", "CHIBAJ": "CHIBA-J",
  "ALVARK": "A-TOKYO", "ATOKYO": "A-TOKYO",
  "SUNROCKERS": "SR-SHIBUYA", "SHIBUYA": "SR-SHIBUYA",
  "BRAVETHUNDERS": "KAWASAKI", "KAWASAKI": "KAWASAKI",
  "BCORSAIRS": "YOKOHAMA-BC", "YOKOHAMABC": "YOKOHAMA-BC",
  "GROUSES": "TOYAMA", "TOYAMA": "TOYAMA",
  "NEOPHOENIX": "SAN-EN", "SANEN": "SAN-EN", "SAN-EN": "SAN-EN",
  "SEAHORSES": "MIKAWA", "MIKAWA": "MIKAWA",
  "FIGHTINGEAGLES": "FE-NAGOYA", "FENAGOYA": "FE-NAGOYA",
  "DOLPHINS": "NAGOYA-D", "DIAMONDDOLPHINS": "NAGOYA-D", "NAGOYA": "NAGOYA-D",
  "LAKES": "SHIGA", "SHIGA": "SHIGA",
  "HANNARYZ": "KYOTO", "KYOTO": "KYOTO",
  "EVESSA": "OSAKA", "OSAKA": "OSAKA",
  "SUSANOOMAGIC": "SHIMANE", "SHIMANE": "SHIMANE",
  "DRAGONFLIES": "HIROSHIMA", "HIROSHIMA": "HIROSHIMA",
  "BALLOONERS": "SAGA", "SAGA": "SAGA",
  "VELCA": "NAGASAKI", "NAGASAKI": "NAGASAKI",
  "GOLDENKINGS": "RYUKYU", "RYUKYU": "RYUKYU"
};

let reportGroups = [];

// --- ゲームレポート一覧は引き続きGitHub APIから取得 (画像URL用) ---
const RECURSIVE_API = `https://api.github.com/repos/${GITHUB_REPO}/git/trees/main?recursive=1&t=${Date.now()}`;

let allPlayerCards = []; // これを追加

try {
  const res = await fetch(RECURSIVE_API, {
    headers: token ? { 
      "Authorization": `Bearer ${token}`, 
      "Accept": "application/vnd.github.v3+json"
    } : { "Accept": "application/vnd.github.v3+json" }
  });
  const data = await res.json();

  if (data && data.tree) {
    // 既存のレポート取得処理
    const reportFiles = data.tree.filter(item => 
  item.path.includes('/B1/') && 
  item.path.endsWith('.png') &&
  !item.path.includes('/Bplayers/') &&
  // 念のため、ファイル名が日付（6桁）で始まっているものだけに絞る
  /^\d{6}/.test(item.path.split('/').pop())
);
    
    // 【重要：追加】選手カードの全パスをリスト化
    // output/Bplayers/B1/ 以下にある全PNGファイルを拾う
    allPlayerCards = data.tree.filter(item => 
      item.path.includes('output/Bplayers/B1/') && 
      item.path.endsWith('.png')
    );

    const groups = {};
    reportFiles.forEach(file => {
      const parts = file.path.split('/');
      const folderName = parts[parts.length - 2];
      const fileName = parts[parts.length - 1];

      const nameParts = fileName.replace('.png', '').split('_');
      const fullDate = nameParts[0]; 
      const gameId = nameParts[1];   
      const teamA_raw = nameParts[2] || "AWAY";
      const teamB_raw = nameParts[3] || "HOME";

      // --- ここで都市名に変換 ---
      const teamA = cityNameMap[teamA_raw.toUpperCase()] || teamA_raw;
      const teamB = cityNameMap[teamB_raw.toUpperCase()] || teamB_raw;

      const targetSubFolder = `game_${gameId}_${teamA_raw}_${teamB_raw}_${fullDate}`;

      if (!groups[folderName]) groups[folderName] = { id: folderName, reports: [] };
      
      groups[folderName].reports.push({
        path: `https://raw.githubusercontent.com/${GITHUB_REPO}/main/${file.path}`,
        away: teamA, // 都市名を入れる
        home: teamB, // 都市名を入れる
        link: `/b1-cards?folder=${folderName}/${targetSubFolder}`
      });
    });
    reportGroups = Object.values(groups).sort((a, b) => b.id.localeCompare(a.id));
  }
} catch (e) {
  console.error("Fetch Error:", e);
}

const getCardUrl = (cardPathInJson, playerObject) => {
  if (!cardPathInJson) return "/no-player.png";

  // 1. 試合IDを取得 (例: 504728)
  const gameMatch = cardPathInJson.match(/game_(\d+)_/);
  const gameId = gameMatch ? gameMatch[1] : null;

  if (gameId && allPlayerCards.length > 0) {
    // 2. その試合IDが含まれるパスだけに絞り込む
    // スクリーンショットの構造 (game_504728_...) に対応
    const sameGameCards = allPlayerCards.filter(item => item.path.includes(`game_${gameId}_`));

    // 3. 検索する名前を正規化 (ROBERT FRANKS -> ROBERT_FRANKS)
    const targetNameEn = playerObject.name 
      ? playerObject.name.trim().toUpperCase().replace(/\s+/g, '_').replace(/'/g, '')
      : "";

    // 4. 適切なファイルを検索
    const realFile = sameGameCards.find(item => {
      const upperPath = item.path.toUpperCase();
      // ファイル名の中に名前（ROBERT_FRANKS）が含まれているかチェック
      return targetNameEn && upperPath.includes(targetNameEn);
    });

    if (realFile) {
      return `https://raw.githubusercontent.com/BDATALAB55/BDL-game-player-cards/main/${encodeURI(realFile.path)}`;
    }
  }

  return "/no-player.png";
};

const teams = [
  { id: 'HOKKAIDO', color: 'bg-[#91ad10]' }, { id: 'SENDAI', color: 'bg-[#f7e000] text-black' }, { id: 'AKITA', color: 'bg-[#dd0055]' },
  { id: 'IBARAKI', color: 'bg-[#002e95]' }, { id: 'UTSUNOMIYA', color: 'bg-[#12284b]' }, { id: 'GUNMA', color: 'bg-[#ffda00] text-black' },
  { id: 'KOSHIGAYA', color: 'bg-[#610d0d]' }, { id: 'A CHIBA', color: 'bg-[#212836]' }, { id: 'CHIBA J', color: 'bg-[#e33216]' },
  { id: 'A TOKYO', color: 'bg-black border border-white/20' }, { id: 'SR SHIBUYA', color: 'bg-[#ffea00] text-black' }, { id: 'KAWASAKI', color: 'bg-[#7a1231]' },
  { id: 'YOKOHAMA BC', color: 'bg-[#000f31]' }, { id: 'TOYAMA', color: 'bg-[#e21f26]' }, { id: 'SAN-EN', color: 'bg-[#d31118]' },
  { id: 'MIKAWA', color: 'bg-[#3356b9]' }, { id: 'FE NAGOYA', color: 'bg-[#003882]' }, { id: 'NAGOYA D', color: 'bg-[#e31d20]' },
  { id: 'SHIGA', color: 'bg-[#1a448e]' }, { id: 'KYOTO', color: 'bg-[#5ea1b4]' }, { id: 'OSAKA', color: 'bg-[#d11c1d]' },
  { id: 'SHIMANE', color: 'bg-[#1c71be]' }, { id: 'HIROSHIMA', color: 'bg-[#f05a22]' }, { id: 'SAGA', color: 'bg-[#4da9df]' },
  { id: 'NAGASAKI', color: 'bg-[#2b3754]' }, { id: 'RYUKYU', color: 'bg-[#b69e63]' }
];

// 追加：モバイル用にチームを9個ずつに分ける
const mobileTeamGroups = [];
for (let i = 0; i < teams.length; i += 9) {
  mobileTeamGroups.push(teams.slice(i, i + 9));
}

