<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;
  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const imgSrc = card.getAttribute('data-img');
      if (imgSrc && modalImg && downloadBtn) {
        modalImg.src = imgSrc;
        downloadBtn.href = imgSrc;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });
  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) close?.click();
  });

// --- モバイル表示モード切り替えロジック ---
  let currentViewMode = 'slide';

  const applyViewMode = () => {
    // PC（768px以上）では常にスライド形式を強制
    if (window.innerWidth >= 768) {
      currentViewMode = 'slide';
    }

    const containers = document.querySelectorAll('.player-container');
    containers.forEach(container => {
      const cards = container.querySelectorAll('.player-card');
      
      if (currentViewMode === 'grid') {
        // グリッド表示（2列）
        container.classList.remove('flex', 'overflow-x-auto', 'snap-x', 'pb-12');
        container.classList.add('grid', 'grid-cols-2', 'gap-2', 'pt-4');
        cards.forEach(c => c.classList.remove('flex-none', 'w-[280px]', 'snap-center'));
      } else {
        // スライド表示（1列・横スクロール）
        container.classList.add('flex', 'overflow-x-auto', 'snap-x', 'pb-12');
        container.classList.remove('grid', 'grid-cols-2', 'gap-4', 'pt-4');
        cards.forEach(c => c.classList.add('flex-none', 'w-[280px]', 'md:w-[320px]', 'snap-center'));
      }
    });
  };

  const switchBtns = document.querySelectorAll('.view-switch-btn');
  switchBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      currentViewMode = btn.getAttribute('data-view-mode') || 'slide';
      switchBtns.forEach(b => {
        const isActive = b.getAttribute('data-view-mode') === currentViewMode;
        b.classList.toggle('bg-white/20', isActive); // 活性
        b.classList.toggle('bg-black/40', !isActive); // 非活性
      });
      applyViewMode();
    });
  });

  // PCに画面を広げた時に自動でスライド表示に戻るようにする
  window.addEventListener('resize', applyViewMode);

</script>
